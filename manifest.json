{
    "manifest_version": 2,
    
    "name": "No pointer",
    "description": "This extension allows you to use your browser without a mouse.",
    "version": "0.1",
    
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": ["https://*/*", "http://*/*"],
            "css": ["content.css"],
            "js": ["jquery-3.2.1.min.js", "mousetrap.js", "content.js"]
        }
    ]
}
